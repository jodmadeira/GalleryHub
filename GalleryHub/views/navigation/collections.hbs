<h1>COLLECTIONS</h1>
<hr>
<div class="row">
  {{#each collections}}
    <div class="col-md-4 mb-5">
      <div class="card" style="width: 18rem;">
        <img src="{{this.coverImgSrc}}" class="card-img-top" alt="{{this.title}}">
        <div class="card-body">
          <h5 class="card-title">{{this.title}}</h5>
          <p class="card-text">{{this.shortDescription}}</p>
          <a href="/items/{{this._id}}" class="btn btn-primary">More</a><br><br>
          <a href="/edit/collection/{{__id}}" class="btn btn-primary">Edit</a><br><br>
          <form action="/delete/collection/{{_id}}" method="post">
          <button type="submit" class="btn btn-primary">Delete Collection</button></form>
        </div>
      </div>
    </div>
  {{else}}
    <p>There are no collections yet!</p>
  {{/each}}
  <a href="/create" class="btn btn-primary">Create New Collection</a>
  <hr />
</div>
